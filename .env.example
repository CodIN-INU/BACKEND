# CODIN MSA Environment Variables Template
# Copy this file to .env.local and fill in your values

# ===========================================
# COMMON SETTINGS
# ===========================================
ENVIRONMENT=local
BASE_URL=http://localhost:8080

# ===========================================
# DATABASE SETTINGS
# ===========================================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=codin
REDIS_URI=redis://localhost:6379
REDIS_PASSWORD=

# ===========================================
# JWT SETTINGS
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_ACCESS_EXPIRATION=1800
JWT_REFRESH_EXPIRATION=864000

# ===========================================
# OAUTH2 SETTINGS
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# ===========================================
# AWS SETTINGS
# ===========================================
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=codin-s3-bucket
AWS_S3_DEFAULT_PROFILE_IMAGE_URL=https://codin-s3-bucket.s3.ap-northeast-2.amazonaws.com/defalut/DefaultProfle.png

# ===========================================
# EMAIL SETTINGS
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ===========================================
# SERVICE PORTS
# ===========================================
API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8081
USER_SERVICE_PORT=8082
CONTENT_SERVICE_PORT=8083
NOTIFICATION_SERVICE_PORT=8084
CHAT_SERVICE_PORT=8085

# ===========================================
# EUREKA SETTINGS
# ===========================================
EUREKA_SERVER_URL=http://localhost:8761/eureka
EUREKA_ENABLED=false

# ===========================================
# SCHEDULE SETTINGS
# ===========================================
SCHEDULE_PATH=/opt/project/backend-data/post_data/
DEPARTMENT_CRON=0 00 4 * * *
STARINU_CRON=0 30 4 * * *

# ===========================================
# LECTURE SETTINGS
# ===========================================
PYTHON_PATH=/usr/bin/python3
LECTURE_FILE_PATH=/opt/project/backend-data/timetable_data/
